<script src="~/Scripts/UI/jquery-1.12.4.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var URL = window.location.pathname;
        if (URL.includes('product')) {
            $('.menuitem').removeClass('active');
            $('#productLi').addClass('active');
        }
        else if (URL.includes('service')) {
            $('.menuitem').removeClass('active');
            $('#serviceLi').addClass('active');
        }
        else if (URL.includes('blog')) {
            $('.menuitem').removeClass('active');
            $('#blogLi').addClass('active');
        }
        else if (URL.includes('gallery')) {
            $('.menuitem').removeClass('active');
            $('#galleryLi').addClass('active');
        }
        else if (URL.includes('career')) {
            $('.menuitem').removeClass('active');
            $('#careerLi').addClass('active');
        }
        else if (URL.includes('about')) {
            $('.menuitem').removeClass('active');
            $('#aboutLi').addClass('active');
        }
        else if (URL.includes('contact')) {
            $('.menuitem').removeClass('active');
            $('#contactLi').addClass('active');
        }
    });
</script>
