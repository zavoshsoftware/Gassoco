@model Models.ViewModels._LayoutViewModel
    <nav>
<div class="header-nav navbar-collapse collapse ">
    <ul class=" nav navbar-nav">
        <li class="active menuitem" id="mainLi">
            <a href="/">@Resources.Label.MenuHome<i class="fa fa-home"></i></a>
        </li>
        <li class="has-mega-menu menuitem" id="productLi">
            <a href="/@ViewContext.RouteData.Values["language"]/productgroup">@Resources.Label.MenuProduct<i class="fa fa-chevron-down"></i></a>
            <ul class="mega-menu">
                @{
                    int a = 0;
                    <li>
                        <ul>
                            @foreach (var item2 in Model.MenuProductGroupViewModel.ProductGroupsWithoutChild)
                            {
                                <li>
                                    <a href="/@ViewContext.RouteData.Values["language"]/product/@item2.Id" class="active">
                                        <i class="fa fa-spoon"></i>@item2.TitleSrt
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                    foreach (var item in Model.MenuProductGroupViewModel.ParentChildProductGroupViewModel)
                    {
                        a++;
                        <li>
                            <ul>
                                <li><a href="/@ViewContext.RouteData.Values["language"]/productgroup/@item.ParentProductGroup.Id" class="active"> <i class="fa fa-spoon"></i>@item.ParentProductGroup.TitleSrt</a></li>
                                @foreach (var childItem in item.ProductGroups)
                                {
                                    <li><a href="/@ViewContext.RouteData.Values["language"]/product/@childItem.Id">@childItem.TitleSrt</a></li>

                                }
                            </ul>
                        </li>
                    }
                }
            </ul>
        </li>
        <li id="serviceLi" class="menuitem">
            <a href="/@(ViewContext.RouteData.Values["language"])/service">@Resources.Label.MenuService<i class="fa fa-wrench"></i></a>
        </li>
        <li id="blogLi" class="menuitem">
            <a href="/@ViewContext.RouteData.Values["language"]/blog">@Resources.Label.MenuNews<i class="fa fa-newspaper-o"></i></a>
        </li>
