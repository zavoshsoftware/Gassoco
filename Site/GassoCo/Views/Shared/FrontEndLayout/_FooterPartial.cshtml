@model Models.ViewModels._LayoutViewModel

<footer class="site-footer footer-dark">
    <!-- CONTACT INFO -->
    <div class="bg-primary">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6  p-tb20">
                    <div class="wt-icon-box-wraper left  bdr-1 bdr-gray-dark p-tb15 p-lr10 clearfix">
                        <div class="icon-md text-secondry">
                            <span class="flaticon-placeholder"></span>
                        </div>
                        <div class="icon-content text-secondry">
                            <h5 class="wt-tilte text-uppercase m-b0">@Model.Footer.AddressText.TitleSrt:</h5>
                            <p>@Html.Raw(Model.Footer.AddressText.BodySrt ) </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6  p-tb20 ">
                    <div class="wt-icon-box-wraper left  bdr-1 bdr-gray-dark p-tb15 p-lr10 clearfix ">
                        <div class="icon-md text-secondry">
                            <span class="flaticon-smartphone"></span>
                        </div>
                        <div class="icon-content text-secondry dirltr">
                            <h5 class="wt-tilte text-uppercase m-b0">@Model.Footer.PhoneText.TitleSrt</h5>
                            @Html.Raw(Model.Footer.PhoneText.BodySrt) 
                             
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6  p-tb20">
                    <div class="wt-icon-box-wraper left  bdr-1 bdr-gray-dark p-tb15 p-lr10 clearfix">
                        <div class="icon-md text-secondry">
                            <span class="flaticon-fax"></span>
                        </div>
                        <div class="icon-content text-secondry dirltr">
                            <h5 class="wt-tilte text-uppercase m-b0">@Model.Footer.FaxText.TitleSrt</h5>
                             @Html.Raw(Model.Footer.FaxText.BodySrt) 

                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 p-tb20">
                    <div class="wt-icon-box-wraper left  bdr-1 bdr-gray-dark p-tb15 p-lr10 clearfix">
                        <div class="icon-md text-secondry">
                            <span class="flaticon-email"></span>
                        </div>
                        <div class="icon-content text-secondry">
                            <h5 class="wt-tilte text-uppercase m-b0">@Model.Footer.EmailText.TitleSrt</h5>
                            @Html.Raw(Model.Footer.EmailText.BodySrt) 

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- FOOTER BLOCKES START -->
    <div class="footer-top overlay-wraper">
        <div class="overlay-main bg-black" style="opacity:0;"></div>
        <div class="container">
            <div class="row">
                <!-- ABOUT COMPANY -->
                <div class="col-md-3 col-sm-6">
                    <div class="widget widget_about">
                        <h4 class="widget-title">@Resources.Label.AboutGasso</h4>
                        <div class="logo-footer clearfix p-b15">
                            <a href="/@ViewContext.RouteData.Values["language"]"><img src="/images/logo.png" width="171" height="49" alt="گازسو" /></a>
                        </div>
                        <p>
                            @Html.Raw(Model.Footer.FooterText.BodySrt)
                        </p>
                    </div>
                </div>
                <!-- RESENT POST -->
                <div class="col-md-3 col-sm-6">
                    <div class="widget recent-posts-entry-date">
                        <h4 class="widget-title">@Resources.Label.LatestNews</h4>
                        <div class="widget-post-bx">
                            @foreach (var item in Model.Footer.Blogs)
                            {
                                <div class="bdr-light-blue widget-post clearfix  bdr-b-1 m-b10 p-b10">
                                    <div class="wt-post-date text-center text-uppercase text-white p-t5">
                                        <strong>@item.SubmitDate.Day</strong>
                                        <span>@item.SubmitDate.Month</span>
                                    </div>
                                    <div class="wt-post-info">
                                        <div class="wt-post-header">
                                            <h6 class="post-title"><a href="/@ViewContext.RouteData.Values["language"]/blog/@item.Id">@item.TitleSrt </a></h6>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <!-- USEFUL LINKS -->
                <div class="col-md-3 col-sm-6">
                    <div class="widget widget_services">
                        <h4 class="widget-title">@Resources.Label.PopularLinks</h4>
                        <ul>
                            <li><a href="/@ViewContext.RouteData.Values["language"]/about">@Resources.Label.MenuAbout</a></li>
                            <li><a href="/@ViewContext.RouteData.Values["language"]/contact">@Resources.Label.MenuContact</a></li>
                            <li><a href="/@ViewContext.RouteData.Values["language"]/career">@Resources.Label.MenuCareer</a></li>
                            <li><a target="_blank" href="/@ViewContext.RouteData.Values["language"]/Catalog">@Resources.Label.MenuCatalog</a></li>
                            <li><a href="/@ViewContext.RouteData.Values["language"]/service">@Resources.Label.MenuService</a></li>
                            <li><a href="/@ViewContext.RouteData.Values["language"]/gallery">@Resources.Label.MenuGallery</a></li>
                        </ul>
                    </div>
                </div>
                <!-- NEWSLETTER -->
                <div class="col-md-3 col-sm-6">
                    <div class="widget widget_newsletter">
                        <h4 class="widget-title">@Resources.Label.Newsletter</h4>
                        <div class="newsletter-bx">
                            <div role="search" method="post">
                                <div class="alert alert-danger" id="errorDivN"></div>
                                <div class="alert alert-success" id="SuccessDivN"></div>
                                <div class="input-group">
                                    <input name="news-letter" class="form-control" placeholder="@Resources.Label.SubmitEmail" type="text" id="NewsletterEmail">
                                    <span class="input-group-btn">
                                        <button type="button" class="site-button" id="btnNewsLetter"><i class="fa fa-paper-plane-o"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- SOCIAL LINKS -->
                    <div class="widget widget_social_inks">
                        <h4 class="widget-title">@Resources.Label.SocialNetwork</h4>
                        <ul class="social-icons social-square social-darkest">
                            <li><a href="javascript:void(0);" class="fa fa-telegram"></a></li>
                            <li><a href="https://www.instagram.com/gassogroup/" class="fa fa-instagram"></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- FOOTER COPYRIGHT -->
    <div class="footer-bottom overlay-wraper">
        <div class="overlay-main bg-black" style="opacity:0;"></div>
        <div class="constrot-strip"></div>
        <div class="container p-t30">
            <div class="row">
                <div class="wt-footer-bot-left">
                    <span class="copyrights-text">
                        ©@Resources.Label.CopyRights
                        @Html.Raw(Model.Footer.ZavoshLink)
                       
                        .
                    </span>
                </div>

            </div>
        </div>
    </div>
</footer>

    <script src="~/Scripts/UI/jquery-1.12.4.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#btnNewsLetter").click(function () {
                var NewsletterEmailval = $("#NewsletterEmail").val();
                if (NewsletterEmailval !== "") {

                    $.ajax(
                        {
                            url: "/Home/NewsLetter",
                            data: { Email: NewsletterEmailval },
                            type: "Get"
                        }).done(function (result) {
                            if (result === "true") {
                                $("#SuccessDivN").css('display', 'block');
                                $("#errorDivN").css('display', 'none');
                            }
                            else if (result === "InvalidEmail") {
                                $("#SuccessDivN").css('display', 'none');
                                $("#errorDivN").css('display', 'block');
                                $("#errorDivN").html("@Resources.Message.InvalidEmail");
                            }
                        });
                }
                else {
                    $("#SuccessDivN").css('display', 'none');
                    $("#errorDivN").css('display', 'block');
                    $("#errorDivN").html("@Resources.Message.EmailRequired");
                }
            });
        });
    </script>

